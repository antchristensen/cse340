<h1><%= title %></h1>

<!-- Display flash messages -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Greet the logged-in user -->
<h2>Welcome <%= loggedInUser.account_firstname %></h2>

<!-- Update account link for all users -->
<p>
  <a href="/account/update/<%= loggedInUser.account_id %>">
    Update Account Information
  </a>
</p>

<!-- Show Inventory Management link only for Employee/Admin -->
<% if (loggedInUser.account_type === "Employee" || loggedInUser.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv/">Access Inventory Management</a>
  </p>
<% } %>
